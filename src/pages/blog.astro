---
import MainLayout from "@layouts/MainLayout.astro";
// import Project from "@components/Project/Project.jsx"
---

<MainLayout title="Blog" description="The blog page of Jason Xie">
  <div class="flex flex-col justify-between gap-8 sm:gap-12">
    <div class="text-center flex flex-col gap-4">
      <h1 class="text-5xl font-black dark:text-white">Blog</h1>
      <p class="text-2xl text-neutral-400 dark:text-neutral-500">
        Random things right now
      </p>
    </div>
    <section class="flex flex-row gap-2">
      <a
        class="border border-gray-400 w-full rounded-md py-5 px-6 flex flex-col gap-4 cursor:pointer bg-white hover:bg-slate-500"
        href="/blog/aws-cognito-authentication-in-bun-with-elysiajs"
      >
        <h2 class="text-3xl font-bold dark:text-white">AWS Cognito Authentication in Bun with ElysiaJS</h2>
        <p class="text-base dark:text-white overflow-ellipsis">A guide on how to set up AWS Cognito authentication in Bun with ElysiaJS</p>
      </a>
    </section>
  </div>
</MainLayout>