---
import "../styles/index.css";
import "../styles/markdown.css";
import BaseHead from "@components/BaseHead.astro";
import NavBar from "@components/NavBar.astro";
import Footer from "@components/Footer/Footer.jsx";
import ProjectBtn from "@components/Project/ProjectBtn.jsx";

const { content } = Astro.props;
const { title, subtitle, description, name, date, img, repoLink, demoLink } = content;
---

<html lang="en" class="scroll-smooth">
	<head>
    <BaseHead title={title} description={description} />
	</head>
	<body class="relative dark:bg-slate-800 min-h-screen flex flex-col justify-between">
    <NavBar />
      <main class="container my-16 sm:my-32 p-6">
        <div class="flex flex-col justify-between gap-12">
          <section class="flex flex-col gap-6">
            {img && (
              <div>
                <img class="w-20 h-20 sm:w-36 sm:h-36 mx-auto" src={img} alt={"Image of " +title}/>
              </div>
            )}
            <div class="text-center">
              <p class="text-neutral-400">Written by 
              <a href="/about" class="font-bold hover:text-white dark:hover:text-black hover:bg-neutral-800 dark:hover:bg-neutral-100">{name}</a> on {date}.</p>
            </div>
            <div class="text-center flex flex-col gap-4">
              <h1 class="text-5xl font-black dark:text-white">{title}</h1>
              <p class="text-2xl text-neutral-400 dark:text-neutral-500">{subtitle}</p>
            </div>
            <!-- <div class="flex flex-row gap-6 justify-center text-2xl"> -->
              <!-- <ProjectBtn name="Repo" href={repoLink} target="_blank" /> -->
              <!-- <ProjectBtn name="Demo" href={demoLink} target="_blank" /> -->
            <!-- </div> -->
          </section>
          <section class="max-w-3xl mx-auto markdown">
          <!-- <section class="max-w-3xl mx-auto"> -->
            <slot />
          </section>
        </div>
      </main>
    <Footer />
  </body>
</html>